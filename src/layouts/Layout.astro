---
import "../styles/global.css";
// Import the WRAPPER, not the generic UI component
import { FloatingDockWrapper } from "../components/shared/floating-dock-wrapper";
import { Footer } from "../components/shared/footer";
import { ThemeLanguageToggle } from "../components/shared/theme-language-toggle";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>M. Anjasfedo Afridiansah</title>
  </head>
  <body>
    <FloatingDockWrapper client:load />
    <ThemeLanguageToggle client:load />

    <slot />

    <Footer client:visible />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  body > * {
    flex-shrink: 0;
  }
</style>
