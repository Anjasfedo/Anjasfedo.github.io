---
import Layout from "../../layouts/Layout.astro";
import { PrivacyPage } from "../../components/privacy-page/privacy-page";
import { getCollection } from "astro:content";
import type { Language } from "@/i18n/ui";

export async function getStaticPaths() {
  const pages = await getCollection("privacyPage");

  const paths = pages.map((page) => {
    const [lang, ...slug] = page.id.split("/");
    return { params: { lang, slug: slug.join("/") || undefined }, props: page };
  });

  return paths;
}

const page = Astro.props;
const content = page.data;
const { lang } = Astro.params;

// SEO Configuration
const seoConfig = {
  en: {
    title: "Privacy Policy | M. Anjasfedo Afridiansah",
    description: "Read the Privacy Policy for M. Anjasfedo Afridiansah's portfolio website. Learn how we collect, use, and protect your personal information and privacy.",
    keywords: "privacy policy, data protection, personal information, anjasfedo privacy, website privacy, user privacy, GDPR compliance, data security"
  },
  id: {
    title: "Kebijakan Privasi | M. Anjasfedo Afridiansah",
    description: "Baca Kebijakan Privasi untuk website portofolio M. Anjasfedo Afridiansah. Pelajari bagaimana kami mengumpulkan, menggunakan, dan melindungi informasi pribadi dan privasi Anda.",
    keywords: "kebijakan privasi, perlindungan data, informasi pribadi, privasi anjasfedo, privasi website, privasi pengguna, kepatuhan GDPR, keamanan data"
  }
};

const seo = seoConfig[lang as Language];
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <PrivacyPage client:load content={content} />
</Layout>
