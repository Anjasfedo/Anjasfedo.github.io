---
import Layout from "../../layouts/Layout.astro";
import { ProjectsPage } from "../../components/projects-page/projects-page";
import { getCollection } from "astro:content";
import type { Language } from "@/i18n/ui";

export async function getStaticPaths() {
  const pages = await getCollection("projectsPage");

  const paths = pages.map((page) => {
    const [lang, ...slug] = page.id.split("/");
    return { params: { lang, slug: slug.join("/") || undefined }, props: page };
  });

  return paths;
}

// Get the page content
const page = Astro.props;
const pageContent = page.data;

// Get the current language from the route
const { lang } = Astro.params;

// Fetch ALL projects
const allProjects = await getCollection("projects");

const projectsData = allProjects
  .filter((project) => project.id.startsWith(`${lang}/`))
  .map((project) => ({
    ...project.data,
    id: project.id,
    name: project.data.title,
  }));

// SEO Configuration
const seoConfig = {
  en: {
    title: "Projects | M. Anjasfedo Afridiansah - Software Engineer Portfolio",
    description: "Explore the portfolio of M. Anjasfedo Afridiansah. Web and mobile development projects including AI content generators, e-commerce analytics, task management apps, and more. Built with React, Go, Laravel, and modern technologies.",
    keywords: "anjasfedo projects, web development projects, mobile apps, react projects, go projects, laravel projects, machine learning projects, ai content generator, ecommerce analytics, task management app, portfolio projects, bengkulu developer"
  },
  id: {
    title: "Proyek | M. Anjasfedo Afridiansah - Software Engineer Portfolio",
    description: "Jelajahi portofolio M. Anjasfedo Afridiansah. Proyek pengembangan web dan mobile termasuk generator konten AI, analitik e-commerce, aplikasi manajemen tugas, dan lainnya. Dibuat dengan React, Go, Laravel, dan teknologi modern.",
    keywords: "proyek anjasfedo, proyek web development, aplikasi mobile, proyek react, proyek go, proyek laravel, proyek machine learning, generator konten ai, analitik ecommerce, aplikasi manajemen tugas, portofolio proyek, developer bengkulu"
  }
};

const seo = seoConfig[lang as Language];
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <div
    class="relative min-h-screen w-full flex flex-col items-center bg-white dark:bg-neutral-950 transition-colors duration-300 overflow-hidden"
  >
    {/* Grid Background */}
    <div
      class="absolute inset-0 [background-size:40px_40px] [background-image:linear-gradient(to_right,#e4e4e7_1px,transparent_1px),linear-gradient(to_bottom,#e4e4e7_1px,transparent_1px)] dark:[background-image:linear-gradient(to_right,#262626_1px,transparent_1px),linear-gradient(to_bottom,#262626_1px,transparent_1px)]"
    >
    </div>

    {/* Radial Mask */}
    <div
      class="pointer-events-none absolute inset-0 flex items-center justify-center bg-white [mask-image:radial-gradient(ellipse_at_center,transparent_20%,black)] dark:bg-neutral-950 transition-colors duration-300"
    >
    </div>

    <div class="relative z-10 w-full pt-20">
      <ProjectsPage
        client:load
        projects={projectsData}
        content={pageContent}
        lang={lang as Language}
      />
    </div>
  </div>
</Layout>
