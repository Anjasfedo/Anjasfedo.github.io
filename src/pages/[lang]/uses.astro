---
import Layout from "../../layouts/Layout.astro";
import { UsesPage } from "../../components/uses-page/uses-page";
import { getCollection } from "astro:content";
import type { Language } from "@/i18n/ui";

export async function getStaticPaths() {
  const pages = await getCollection("usesPage");

  const paths = pages.map((page) => {
    const [lang, ...slug] = page.id.split("/");
    return { params: { lang, slug: slug.join("/") || undefined }, props: page };
  });

  return paths;
}

const page = Astro.props;
const content = page.data;
const { lang } = Astro.params;

// SEO Configuration
const seoConfig = {
  en: {
    title: "Uses | M. Anjasfedo Afridiansah - Development Tools & Setup",
    description: "Discover the development tools, software, and hardware setup used by M. Anjasfedo Afridiansah. Includes IDEs, coding tools, productivity apps, and workflow for software development.",
    keywords: "anjasfedo uses, developer tools, software setup, coding tools, IDE, VS Code, development environment, productivity tools, software engineer tools, web development tools, machine learning setup"
  },
  id: {
    title: "Uses | M. Anjasfedo Afridiansah - Tools Pengembangan & Setup",
    description: "Temukan tools pengembangan, software, dan setup hardware yang digunakan M. Anjasfedo Afridiansah. Termasuk IDE, tools coding, aplikasi produktivitas, dan workflow untuk pengembangan software.",
    keywords: "anjasfedo uses, tools developer, setup software, tools coding, IDE, VS Code, lingkungan pengembangan, tools produktivitas, tools software engineer, tools pengembangan web, setup machine learning"
  }
};

const seo = seoConfig[lang as Language];
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <UsesPage client:load content={content} />
</Layout>
