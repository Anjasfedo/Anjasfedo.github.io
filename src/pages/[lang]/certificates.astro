---
import Layout from "../../layouts/Layout.astro";
import { CertificatesPage } from "../../components/certificates-page/certificates-page";
import { getCollection } from "astro:content";
import type { Language } from "@/i18n/ui";

export async function getStaticPaths() {
  const pages = await getCollection("certificatesPage");

  const paths = pages.map((page) => {
    const [lang, ...slug] = page.id.split("/");
    return { params: { lang, slug: slug.join("/") || undefined }, props: page };
  });

  return paths;
}

// Get the page content
const page = Astro.props;
const pageContent = page.data;

// Get the current language from the route
const { lang } = Astro.params;

// Fetch ALL certificates from the content collection
const allCertificatesCollection = await getCollection("certificates");


const certificatesData = allCertificatesCollection
  .filter((certificate) => certificate.id.startsWith(`${lang}/`))
  .map((certificate) => ({
    ...certificate.data,
    id: certificate.id,
    name: certificate.data.title,
  }));

// SEO Configuration
const seoConfig = {
  en: {
    title: "Certificates | M. Anjasfedo Afridiansah - Professional Certifications",
    description: "View professional certifications and achievements of M. Anjasfedo Afridiansah. Certified in AWS Solutions Architect, Google Cloud Professional, Meta Front-End Developer, and Microsoft Azure Fundamentals.",
    keywords: "anjasfedo certificates, AWS certified solutions architect, Google Cloud professional, Meta front-end developer, Microsoft Azure fundamentals, professional certifications, software engineer certifications, cloud certifications, web developer certificates"
  },
  id: {
    title: "Sertifikat | M. Anjasfedo Afridiansah - Sertifikasi Profesional",
    description: "Lihat sertifikasi profesional dan prestasi M. Anjasfedo Afridiansah. Bersertifikat dalam AWS Solutions Architect, Google Cloud Professional, Meta Front-End Developer, dan Microsoft Azure Fundamentals.",
    keywords: "sertifikat anjasfedo, AWS certified solutions architect, Google Cloud professional, Meta front-end developer, Microsoft Azure fundamentals, sertifikasi profesional, sertifikasi software engineer, sertifikasi cloud, sertifikat web developer"
  }
};

const seo = seoConfig[lang as Language];
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <div
    class="relative min-h-screen w-full flex flex-col items-center bg-white dark:bg-neutral-950 transition-colors duration-300 overflow-hidden"
  >
    {/* Grid Background */}
    <div
      class="absolute inset-0 [background-size:40px_40px] [background-image:linear-gradient(to_right,#e4e4e7_1px,transparent_1px),linear-gradient(to_bottom,#e4e4e7_1px,transparent_1px)] dark:[background-image:linear-gradient(to_right,#262626_1px,transparent_1px),linear-gradient(to_bottom,#262626_1px,transparent_1px)]"
    >
    </div>

    {/* Radial Mask */}
    <div
      class="pointer-events-none absolute inset-0 flex items-center justify-center bg-white [mask-image:radial-gradient(ellipse_at_center,transparent_20%,black)] dark:bg-neutral-950 transition-colors duration-300"
    >
    </div>

    <div class="relative z-10 w-full pt-20">
      <CertificatesPage
        client:load
        certificates={certificatesData}
        content={pageContent}
      />
    </div>
  </div>
</Layout>
