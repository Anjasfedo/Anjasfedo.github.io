---
import Layout from "../../layouts/Layout.astro";
import { TermsPage } from "../../components/terms-page/terms-page";
import { getCollection } from "astro:content";
import type { Language } from "@/i18n/ui";

export async function getStaticPaths() {
  const pages = await getCollection("termsPage");

  const paths = pages.map((page) => {
    const [lang, ...slug] = page.id.split("/");
    return { params: { lang, slug: slug.join("/") || undefined }, props: page };
  });

  return paths;
}

const page = Astro.props;
const content = page.data;
const { lang } = Astro.params;

// SEO Configuration
const seoConfig = {
  en: {
    title: "Terms of Service | M. Anjasfedo Afridiansah",
    description: "Read the Terms of Service for M. Anjasfedo Afridiansah's portfolio website. Understand the rules and guidelines for using this website and its services.",
    keywords: "terms of service, terms and conditions, legal terms, anjasfedo terms, website terms, user agreement, portfolio terms"
  },
  id: {
    title: "Syarat & Ketentuan | M. Anjasfedo Afridiansah",
    description: "Baca Syarat & Ketentuan untuk website portofolio M. Anjasfedo Afridiansah. Pahami aturan dan pedoman penggunaan website ini dan layanannya.",
    keywords: "syarat ketentuan, terms and conditions, ketentuan hukum, syarat anjasfedo, ketentuan website, perjanjian pengguna, ketentuan portofolio"
  }
};

const seo = seoConfig[lang as Language];
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <TermsPage client:load content={content} />
</Layout>
