---
import Layout from "../layouts/Layout.astro";
import { ProjectsPage } from "../components/projects-page/projects-page";
import { getCollection } from "astro:content";

// Page UI Content
const pageContent = {
  pageTitle: "All Projects",
  pageDescription: "Explore my collection of projects, experiments, and open-source contributions.",
  searchPlaceholder: "Search projects...",
  resetFiltersText: "Reset Filters",
  statusLabel: "Status",
  technologiesLabel: "Technologies",
  selectTechnologiesText: "Select technologies",
  selectedCount: "selected",
  noProjectsFoundText: "No matching projects found.",
  loadMoreText: "Load More Projects"
};

// Fetch ALL projects
const allProjects = await getCollection("projects");

const projectsData = allProjects.map((project) => ({
  ...project.data,
  slug: project.slug || project.id.replace(".mdoc", ""),
}));

// SEO Configuration
const seo = {
  title: "Projects | M. Anjasfedo Afridiansah - Software Engineer Portfolio",
  description:
    "Explore the portfolio of M. Anjasfedo Afridiansah. Web and mobile development projects including AI content generators, e-commerce analytics, task management apps, and more. Built with React, Go, Laravel, and modern technologies.",
  keywords:
    "anjasfedo projects, web development projects, mobile apps, react projects, go projects, laravel projects, machine learning projects, ai content generator, ecommerce analytics, task management app, portfolio projects, bengkulu developer",
};
---

<Layout title={seo.title} description={seo.description} keywords={seo.keywords}>
  <div
    class="relative min-h-screen w-full flex flex-col items-center bg-white dark:bg-neutral-950 transition-colors duration-300 overflow-hidden"
  >
    {/* Grid Background */}
    <div
      class="absolute inset-0 [background-size:40px_40px] [background-image:linear-gradient(to_right,#e4e4e7_1px,transparent_1px),linear-gradient(to_bottom,#e4e4e7_1px,transparent_1px)] dark:[background-image:linear-gradient(to_right,#262626_1px,transparent_1px),linear-gradient(to_bottom,#262626_1px,transparent_1px)]"
    >
    </div>

    {/* Radial Mask */}
    <div
      class="pointer-events-none absolute inset-0 flex items-center justify-center bg-white [mask-image:radial-gradient(ellipse_at_center,transparent_20%,black)] dark:bg-neutral-950 transition-colors duration-300"
    >
    </div>

    <div class="relative z-10 w-full pt-20">
      <ProjectsPage client:load projects={projectsData} content={pageContent} />
    </div>
  </div>
</Layout>
